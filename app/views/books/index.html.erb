<div class="container">
 <div class="row">

<div class="col-lg-4">
<%= render partial: 'books/new', locals: { book: @book, user: @user } %>
</div>

<div class="col-lg-8">
<h1>Books</h1>

<table class="table table-striped">
 <thead>
  <tr>
    <th></th>
   <th>Title</th>
   <th>Option</th>
   <th colspan="3"></th>
  </tr>
 </thead>

 <tbody>
 <% @books.each do |book| %>
 <tr>
  <td></td>
  <td><%= link_to book.title, "/books/#{book.id}" %></td>
  <td><%= book.body %></td>
 </tr>
 <% end %>
</tbody>
</table>
</div>
</div>
</div>