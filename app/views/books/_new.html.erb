<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class ="table table-striped">
  <tbody>
    <tr>
      <td><%= "name" %></td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td><%= "introduction" %></td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

    <% if user.id == current_user.id %>
    <%= link_to edit_user_path(current_user.id) do %>
    <div class= " edit btn btn-outline-secondary btn-default btn-block">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16"><path d="M4.243 4.757a3.757 3.757 0 115.851 3.119 6.006 6.006 0 013.9 5.339.75.75 0 01-.715.784H2.721a.75.75 0 01-.714-.784 6.006 6.006 0 013.9-5.34 3.753 3.753 0 01-1.664-3.118z"></path></svg>
    </div>
    <% end %>
    <% end %>

<h1>New Books</h1>
<%= form_with model: book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
  <%= f.text_area :body %>
  </br><button type="button　submit" class="btn btn-success">
    　　Create Book
    　　</button>
<% end %>