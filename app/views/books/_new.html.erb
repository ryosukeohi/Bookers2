<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class ="table table-striped">
  <tbody>
    <tr>
      <td><%= "name" %></td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td><%= "introduction" %></td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

    <div>
    <%= link_to "/users/#{user.id}/edit" do %>
    <i class="edit btn btn-outline-secondary btn-default btn-block fas fa-user-cog"></i>
    <% end %>
    </div>


<h2 class="mt-3">New book</h2>
<%= form_with model: book, local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>Option</p>
  <%= f.text_area :body %>

  </br><%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>