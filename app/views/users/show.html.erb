<h1>User info</h1>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>


<h1>Books</h1>

<table class="table table-striped">
 <thead>
  <tr>
    <th></th>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>

 <tbody>
 <% @books.each do |book| %>
 <tr>
  <td></td>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
 </tr>
 <% end %>
</tbody>
</table>