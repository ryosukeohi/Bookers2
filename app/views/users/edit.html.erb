<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  </br><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>

  <h4>image</h4>
  <%= attachment_image_tag @user,:profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  </br><label for="inputImage">ProfileImage</label>
  </br><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <h4>introduction</h4>
  <%= f.text_area :introduction %>

  </br><%= f.submit "Update User" %>
<% end %>